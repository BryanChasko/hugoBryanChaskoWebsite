{
  "name": "bryan-chasko-com",
  "version": "1.0.0",
  "description": "WebGL testing infrastructure for bryanchasko.com Hugo site",
  "private": true,
  "scripts": {
    "test": "playwright test --config=playwright.config.js",
    "test:chrome": "playwright test --project=chromium",
    "test:chromium": "playwright test --project=chromium",
    "test:firefox": "playwright test --project=firefox",
    "test:webkit": "playwright test --project=webkit",
    "test:update-baselines": "UPDATE_BASELINES=true playwright test",
    "test:debug": "playwright test --debug",
    "test:headed": "playwright test --headed",
    "install:browsers": "playwright install chromium firefox webkit"
  },
  "keywords": [
    "webgl",
    "testing",
    "visual-regression",
    "performance"
  ],
  "author": "Bryan Chasko",
  "license": "MIT",
  "devDependencies": {
    "@aws-sdk/client-s3": "^3.470.0",
    "@aws-sdk/credential-providers": "^3.955.0",
    "@playwright/mcp": "^0.0.53",
    "@playwright/test": "^1.40.0",
    "playwright": "^1.40.0",
    "sharp": "^0.33.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
